{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://0luka.local/schemas/run_provenance_v1.json",
  "title": "RunProvenanceV1",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "author",
    "tool",
    "input_hash",
    "output_hash",
    "ts",
    "evidence_refs"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "run_provenance_v1"
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "tool": {
      "type": "string",
      "minLength": 1
    },
    "input_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "output_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "ts": {
      "type": "string",
      "minLength": 1
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
